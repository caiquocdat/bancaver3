<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- màu cho phần chưa tăng -->
            <corners android:radius="20dp" /> <!-- bổ sung radius cho background -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#9C32DB" /> <!-- màu cho phần tăng dần -->
                <corners android:radius="20dp" /> <!-- bổ sung radius cho progress -->
            </shape>
        </clip>
    </item>
</layer-list>
